<!DOCTYPE html>
<html>
<head>
    <title>Validation Errors</title>
</head>
<body>
    <h1>Validation Errors</h1>

    @if (ViewData["Errors"] != null)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var error in ViewData["Errors"] as List<string>)
                {
                    <li>@error</li>
                }
            </ul>
        </div>
    }
</body>
</html>
